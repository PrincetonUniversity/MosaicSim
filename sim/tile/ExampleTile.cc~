#include "../sim.h"
#include "Tile.h"

class ExampleTile: public Tile {  
public:
  ExampleTile(Simulator* sim, int clockspeed) : Tile(sim, clockspeed) {
  }
  Transaction* myTransaction;
  bool process() {
    if(myTransaction) {
      sim->InsertTransaction(myTransaction, cycles);
    }
    cycles++;
    return cycles<100000;
  }

  bool ReceiveTransaction(Transaction* t) {
    myTransaction=t;
    myTransaction->src_id=id;
    myTransaction->dst_id=0;
    return true;
  }
  
};
